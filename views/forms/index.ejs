<%- include("../partials/header.ejs") %> 
<h1 class="text-3xl text-black pb-6">Forms</h1>
<div class="mt-6">
    <a class="px-4 py-1 text-white font-light tracking-wider bg-gray-900 rounded" href="/admin/form/add">Add Forms</a>
    <form style="float: right;" action="/admin/form/find/" method="POST" enctype="multipart/form-data">
    <input type="text" name="mySearch1" placeholder="Search ... ">
    <button type="submit"> Submit </button>
    </form>
</div>
<div class="w-auto mt-6 overflow-auto">
    <div class="bg-white">
        <table class="min-w-full bg-white">
            <thead class="bg-gray-800 text-white">
                <tr>
                    <th class="text-left py-3 px-4 uppercase font-semibold text-sm">Date</th>
                    <th class="w-1/3 text-left py-3 px-4 uppercase font-semibold text-sm">Title</th>
                    <th class="w-1/3 text-left py-3 px-4 uppercase font-semibold text-sm">Description</th>
                    <th class="text-left py-3 px-4 uppercase font-semibold text-sm">Link</td>
                    <th class="text-left py-3 px-4 uppercase font-semibold text-sm">Edit</td>
                    <th class="text-left py-3 px-4 uppercase font-semibold text-sm">Delete</td>
                </tr>
            </thead>
            <tbody class="text-gray-700" id="myMenu">
                    <%forms.forEach((form,i)=>{ if(i%2){%>
                            <tr class="bg-gray-200">
                        <%}else{%>
                            <tr>
                        <%}%>
                            <td class="text-left py-3 px-4"><%=  form.creation.getFullYear()+'/'+(form.creation.getMonth()+1)+'/'+form.creation.getDate() %></td>
                            <td class="w-1/3 text-left py-3 px-4"><%= form.title %></td>
                            <td class="w-1/3 text-left py-3 px-4"><%= form.description.substring(0, 80) + "..." %></td>
                            <td class="text-left py-3 px-4">
                            <% if(form.path.indexOf("https://") == -1) { %>
                            <a class="hover:text-blue-500" href="/admin/form/pdf/<%=form.id%>" target="_blank">View</a>
                            <% } else { %>
                            <a class="hover:text-blue-500" href="<%= form.path %>" target="_blank">View</a>
                            <% } %>
                            </td>
                            <td class="text-left py-3 px-4"><a class="hover:text-blue-500" href="/admin/form/<%=form.id%>">Edit</a></td>
                            <td class="text-left py-3 px-4"><form class="mx-2" action="/admin/form/<%=form.id%>?_method=DELETE" method="POST"><button class="hover:text-blue-500">Delete</button></form></td>
                           
                        </tr>
                    <% })%>
                        
            </tbody>
        </table>
    </div>
</div>

<%- include("../partials/footer.ejs") %> 

